#!/bin/bash - 
#===============================================================================
#
#          FILE: allpull.sh
# 
#         USAGE: ./allpull.sh 
# 
#   DESCRIPTION: 
# 
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: liuxueyang (lxy), liuxueyang457@163.com
#  ORGANIZATION: Hunan University
#       CREATED: 04/27/2014 20:22
#      REVISION:  ---
#===============================================================================

set -o nounset                              # Treat unset variables as an error

cp ~/.vimrc ~/.vim/vimrc

dir=$(find ~/Hack -name .git)
for dir_one in $dir
do
	cd $dir_one
	cd ..
	git pull
done

cd ~/vimwiki/
git pull

exit 0
